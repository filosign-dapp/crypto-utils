{
    "name": "filosign-crypto-utils",
    "version": "0.2.1",
    "description": "Crypto utilities for FiloSign",
    "main": "exports.ts",
    "types": "exports.ts",
    "exports": {
        ".": {
            "import": "./exports.ts",
            "require": "./pkg-node/filosign_crypto_utils.js",
            "types": "./exports.ts"
        },
        "./wasm": {
            "import": "./pkg-node/filosign_crypto_utils.js",
            "require": "./pkg-node/filosign_crypto_utils.js"
        }
    },
    "files": [
        "exports.ts",
        "pkg-node/**/*",
        "README.md"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/filosign-dapp/crypto-utils.git"
    },
    "keywords": [
        "cryptography",
        "wasm",
        "filosign",
        "encryption"
    ],
    "scripts": {
        "build": "wasm-pack build --target web --out-dir pkg; wasm-pack build --target nodejs --out-dir pkg-node",
        "test": "npm run build && bun run test.ts",
        "prepublishOnly": "npm run build"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "tsx": "^4.0.0",
        "typescript": "^5.0.0"
    }
}
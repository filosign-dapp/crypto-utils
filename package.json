{
    "name": "filosign-crypto-utils",
    "version": "0.2.23",
    "description": "Crypto utilities for FiloSign",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/filosign-dapp/crypto-utils.git"
    },
    "exports": {
        "/web": "./src/impl/web.ts",
        "/node": "./src/impl/node.ts"
    },
    "keywords": [
        "cryptography",
        "wasm",
        "filosign",
        "encryption"
    ],
    "scripts": {
        "wasm:build": "wasm-pack build --target web --out-dir pkg; wasm-pack build --target nodejs --out-dir pkg-node;",
        "test": "npm run build && bun run test.ts"
    },
    "devDependencies": {
        "@types/argon2": "^0.15.4",
        "@types/argon2-browser": "^1.18.4",
        "@types/bun": "^1.3.0",
        "@types/libsodium-wrappers-sumo": "^0.7.8"
    },
    "dependencies": {
        "@noble/curves": "^2.0.1",
        "argon2": "^0.44.0",
        "argon2-browser": "^1.18.0",
        "libsodium-wrappers-sumo": "^0.7.15"
    }
}